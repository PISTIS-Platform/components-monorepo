{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "lib": ["es2020", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@pistis/blockchain": ["libs/blockchain/src/index.ts"],
            "@pistis/bullMq": ["libs/bullMq/src/index.ts"],
            "@pistis/component-health": ["libs/component-health/src/index.ts"],
            "@pistis/consumer": ["libs/consumer/src/index.ts"],
            "@pistis/contracts": ["libs/contracts/src/index.ts"],
            "@pistis/data-storage": ["libs/data-storage/src/index.ts"],
            "@pistis/factories-registrant": ["libs/factories-registrant/src/index.ts"],
            "@pistis/intention-analytics": ["libs/intention-analytics/src/index.ts"],
            "@pistis/investment-planner": ["libs/investment-planner/src/index.ts"],
            "@pistis/kafka": ["libs/kafka/src/index.ts"],
            "@pistis/metadata-repository": ["libs/metadata-repository/src/index.ts"],
            "@pistis/models-repository": ["libs/models-repository/src/index.ts"],
            "@pistis/notifications": ["libs/notifications/src/index.ts"],
            "@pistis/provider": ["libs/provider/src/index.ts"],
            "@pistis/sctc": ["libs/sctc/src/index.ts"],
            "@pistis/shared": ["libs/shared/src/index.ts"],
            "@pistis/bull-mq": ["libs/bullMq/src/index.ts"],
            "@pistis/transactions-auditor": ["libs/transactions-auditor/src/index.ts"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
