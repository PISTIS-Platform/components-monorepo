{
    "name": "transactions-auditor-component",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "apps/transactions-auditor-component/src",
    "projectType": "application",
    "targets": {
        "serve": {
            "executor": "@nx/js:node",
            "defaultConfiguration": "development",
            "options": {
                "buildTarget": "transactions-auditor-component:build"
            },
            "configurations": {
                "development": {
                    "buildTarget": "transactions-auditor-component:build:development"
                },
                "production": {
                    "buildTarget": "transactions-auditor-component:build:production"
                }
            }
        },
        "build-migrations": {
            "executor": "nx:run-commands",
            "options": {
                "cwd": "apps/transactions-auditor-component",
                "command": "tsc --project ./tsconfig.orm.json"
            }
        },
        "migration": {
            "executor": "nx:run-commands",
            "options": {
                "cwd": "apps/transactions-auditor-component",
                "command": "npx mikro-orm {args.action}"
            },
            "defaultConfiguration": "pending",
            "configurations": {
                "check": {
                    "args": "--action=migration:check"
                },
                "pending": {
                    "args": "--action=migration:pending"
                },
                "list": {
                    "args": "--action=migration:list"
                },
                "up": {
                    "args": "--action=migration:up"
                },
                "down": {
                    "args": "--action=migration:down"
                },
                "create": {
                    "args": "--action=migration:create"
                }
            }
        },
        "container": {
            "executor": "@nx-tools/nx-container:build",
            "dependsOn": ["build", "build-migrations"],
            "options": {
                "engine": "docker",
                "platforms": ["linux/amd64"],
                "metadata": {
                    "images": ["registry.pistis-market.eu/pistis/transactions-auditor-component"],
                    "load": true,
                    "labels": [
                        "org.opencontainers.image.authors=Suite5 Information Technology Solutions",
                        "org.opencontainers.image.version=1.0.0"
                    ],
                    "tags": ["1.1.2"]
                }
            }
        }
    },
    "tags": []
}
